<h1>All Items</h1>

<h3>Filter Items</h3>
    <%= form_tag("/items", method: "get") do%>
        <%= select_tag "store", options_from_collection_for_select(@stores, "id", "name"), include_blank: true%>

        <%=submit_tag "Filter"%>
    <%end%>

<ul>
<%=@items.each do |item|%>

    <label>Sub-Category:</label>
    <%=item.sub_category%> <br>

    <label>Stock:</label>
    <%=item.stock%> <br>

    <label>Description:</label>
    <%=item.description%> <br>

    <label>Size:</label>
    <%=item.size%> <br>
 
    <label>Gender:</label>
    <%=item.gender%> <br><br>
<%end%>
</ul>




